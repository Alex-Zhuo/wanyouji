[Unit]
Description=qcluster daemon szpw
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/disk4/Sites/cts_backend
ExecStart=/home/ubuntu/.virtualenvs/szpw/bin/python manage.py qcluster
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=False
Restart=always

[Install]
WantedBy=multi-user.target
